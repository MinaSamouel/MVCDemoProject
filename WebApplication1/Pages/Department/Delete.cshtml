@page "{id?}"
@model WebApplication1.Pages.Department.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <div class="text-center">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Department.DepartmentId" />

            <div class="form-group">
                <label asp-for="Department.DepartmentName" class="control-label"></label>
                <input asp-for="Department.DepartmentName" class="form-control" />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" onclick="return confirm('Are you sure Want to delete the department?')" value="Delete" class="btn btn-danger" />
                <a class="btn btn-dark" asp-page="./Index">Back to List</a>

            </div>
        </form>
    </div>
    
</div>
