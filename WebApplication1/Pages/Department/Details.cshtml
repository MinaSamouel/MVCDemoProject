@page "{id?}"
@model WebApplication1.Pages.Department.DetailsModel

@{
    ViewData["Title"] = "Departmetn Details";
}

<h1>Details</h1>

<div class="text-center">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Department.DepartmentId" class="control-label"></label>
            <input asp-for="Department.DepartmentId" class="form-control" readonly/>
            <span asp-validation-for="Department.DepartmentId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Department.DepartmentName" class="control-label"></label>
            <input asp-for="Department.DepartmentName" class="form-control" readonly/>
            <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <a class="btn btn-dark" asp-page="Index">Back to List</a>

        </div>
    </form>
</div>

